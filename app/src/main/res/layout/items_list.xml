<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/items_list_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <ImageView
            android:id="@+id/list_items_image"
            android:layout_height="120dp"
            style="@style/items_list_image" />

        <TextView
            android:id="@+id/list_items_title"
            style="@style/items_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/list_items_image"
            android:layout_toRightOf="@+id/list_items_image"


            android:text="Large Text"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/list_items_dis"
            style="@style/items_list_title"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:text="Distance : 3km"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
